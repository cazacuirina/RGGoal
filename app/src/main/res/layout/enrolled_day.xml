<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradients">

    <TextView
        android:id="@+id/dayStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/caveatbrush_regular"
        android:layout_marginLeft="20dp"
        android:textColor="@color/darkPink"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvDayStage"
        android:layout_toRightOf="@id/dayStage"
        android:layout_below="@+id/dayStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkPink"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/caveat_w"/>

    <TextView
        android:id="@+id/dayDuraion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        android:fontFamily="@font/caveatbrush_regular"
        android:layout_below="@+id/tvDayStage"/>
    <TextView
        android:id="@+id/tvDayDuraion"
        android:layout_toRightOf="@id/dayDuraion"
        android:layout_below="@id/tvDayStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/caveat_w"/>

    <TextView
        android:id="@+id/dayEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        android:fontFamily="@font/caveatbrush_regular"
        android:textStyle="bold"
        android:layout_below="@+id/tvDayDuraion"/>
    <TextView
        android:id="@+id/tvDayEquipment"
        android:layout_toRightOf="@id/dayEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caveat_w"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvDayDuraion"/>

    <TextView
        android:id="@+id/nameDayEx"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:text="@string/exname"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@+id/tvDayEquipment"/>

    <TextView
        android:id="@+id/repsDayEx"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        android:text="@string/exreps"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/nameDayEx"
        android:layout_below="@+id/tvDayEquipment"/>

    <TextView
        android:id="@+id/specsDayEx"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        android:text="@string/exspecs"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/repsDayEx"
        android:layout_below="@+id/tvDayEquipment"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDayExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:layout_below="@+id/nameDayEx"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_baseline_thumb_up_24"
        android:drawablePadding="5dp"
        android:text="@string/view"
        android:layout_below="@id/rvDayExercises"
        android:background="@drawable/tv_rounded"
        android:textColor="#FFFFFF"
        android:drawableTint="#FFFFFF"
        android:paddingHorizontal="10dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>

</ScrollView>